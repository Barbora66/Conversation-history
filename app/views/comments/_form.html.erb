<%= form_with(model: comment, url: url, class: "contents") do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-700 px-3 py-2 font-normal rounded-md mt-3">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul class="list-disc ml-6">
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :project_id %>

  <div class="my-5 flex gap-2 items-end">
    <%= form.text_area :content, rows: 4, class: ["shadow h-12 rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-200 focus:outline-purple-600": comment.errors[:content].none?, "border-red-400 focus:outline-red-600": comment.errors[:content].any?}] %>

    <%= form.submit class: "rounded-lg px-3.5 py-2 bg-violet-500 hover:bg-violet-600 text-white inline-block font-normal cursor-pointer" %>
  </div>
<% end %>
